{
	"name": "FilterPayroll",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "EmployeeDataDataSet",
						"type": "DatasetReference"
					},
					"name": "Employees"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "output",
						"type": "DatasetReference"
					},
					"name": "PayrollEmpData"
				}
			],
			"transformations": [
				{
					"name": "filterPayrollDept"
				}
			],
			"scriptLines": [
				"source(output(",
				"          empid as string,",
				"          { name} as string,",
				"          { country} as string,",
				"          { department} as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     partitionBy('hash', 1)) ~> Employees",
				"Employees filter(equals({ department},'3'),",
				"     partitionBy('hash', 1)) ~> filterPayrollDept",
				"filterPayrollDept sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['PayrollEmployess.csv'],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          empid,",
				"          { name},",
				"          { country},",
				"          { department}",
				"     ),",
				"     partitionBy('hash', 1)) ~> PayrollEmpData"
			]
		}
	}
}